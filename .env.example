# =============================================================================
# Drofbot Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# Lines starting with # are comments. Uncomment to enable.

# --- Node Environment ---
NODE_ENV=development

# =============================================================================
# Supabase (Phase 2+)
# =============================================================================
DROFBOT_SUPABASE_URL=http://localhost:8000
DROFBOT_SUPABASE_ANON_KEY=your-anon-key
DROFBOT_SUPABASE_SERVICE_KEY=your-service-key

# =============================================================================
# Primary Channel — Telegram
# =============================================================================
DROFBOT_TELEGRAM_BOT_TOKEN=your-bot-token
DROFBOT_TELEGRAM_CHAT_ID=your-chat-id

# =============================================================================
# LLM Provider (inherited from OpenClaw, rebranded)
# =============================================================================
DROFBOT_LLM_PROVIDER=openrouter
DROFBOT_LLM_API_KEY=your-api-key
DROFBOT_LLM_MODEL=anthropic/claude-opus-4.6

# --- Additional LLM provider keys (optional, only set what you use) ---
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...
# OPENROUTER_API_KEY=sk-or-...
# GROQ_API_KEY=gsk_...
# GEMINI_API_KEY=...
# XAI_API_KEY=...
# MISTRAL_API_KEY=...
# CEREBRAS_API_KEY=...
# PERPLEXITY_API_KEY=pplx-...

# =============================================================================
# Dashboard API (Phase 5a)
# =============================================================================
# Bearer token for dashboard authentication. Generate with:
#   openssl rand -hex 32
# or any secure random 64-char hex string.
DROFBOT_DASHBOARD_TOKEN=your-secure-dashboard-token

# =============================================================================
# Gateway Configuration
# =============================================================================
# The gateway serves both the WebSocket and the Dashboard API at /api/*.
# Default port: 18789
# DROFBOT_GATEWAY_PORT=18789

# Gateway auth token (used by CLI and remote connections).
# Falls back to DROFBOT_DASHBOARD_TOKEN if not set separately.
# OPENCLAW_GATEWAY_TOKEN=your-gateway-token
# OPENCLAW_GATEWAY_PASSWORD=your-gateway-password

# =============================================================================
# Brain/Hands Worker Split (Phase 3)
# =============================================================================
# Uncomment for distributed mode where workers connect to a brain gateway.
# DROFBOT_BRAIN_URL=https://your-vps:18789
# DROFBOT_WORKER_SECRET=your-worker-secret

# =============================================================================
# Memory Embeddings (Phase 7g)
# =============================================================================
# Embeddings use the "openai" provider pointed at OpenRouter's /v1/embeddings.
# Configure via `drofbot config set agents.defaults.memorySearch.*`:
#   provider:          openai
#   model:             text-embedding-3-small  (1536 dims, matches DB schema)
#   remote.baseUrl:    https://openrouter.ai/api/v1
#   remote.apiKey:     <your OpenRouter API key>
# No additional env var needed — the key is stored in config.

# =============================================================================
# GUTTERS Integration (Phase 5)
# =============================================================================
# DROFBOT_GUTTERS_MCP_URL=http://localhost:8080

# =============================================================================
# Expression Engine — Spontaneous Personality (Phase 6)
# =============================================================================
# These are runtime defaults defined in code. Override via Supabase config
# or environment if needed.
# DROFBOT_EXPRESSION_MAX_PER_DAY=3
# DROFBOT_EXPRESSION_COOLDOWN_MS=10800000
# DROFBOT_EXPRESSION_QUIET_START=23
# DROFBOT_EXPRESSION_QUIET_END=7

# =============================================================================
# PWA Push Notifications (Phase 5d)
# =============================================================================
# VAPID keys for Web Push. Generate with:
#   npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY=your-vapid-public-key
# VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# Text-to-Speech (optional)
# =============================================================================
# ELEVENLABS_API_KEY=your-elevenlabs-key
# OPENAI_TTS_BASE_URL=https://api.openai.com/v1

# =============================================================================
# Web Search (optional)
# =============================================================================
# BRAVE_API_KEY=your-brave-search-key

# =============================================================================
# Paths & Overrides (advanced)
# =============================================================================
# DROFBOT_CONFIG_PATH=~/.drofbot/drofbot.json
# DROFBOT_STATE_DIR=~/.drofbot
# DROFBOT_OAUTH_DIR=~/.drofbot/credentials

# =============================================================================
# Webhooks (External Integration Hooks)
# =============================================================================
# HTTP webhook endpoints at /hooks/* for external systems (Gmail, CI, etc.)
# to trigger agent work. NOT needed for brain/cosmic/synthesis features.
# Disabled by default — only enable if you need external integrations.
# DROFBOT_HOOKS_ENABLED=false
# DROFBOT_HOOKS_TOKEN=your-64-char-hex-token

# =============================================================================
# Production — Cloudflare Tunnel
# =============================================================================
# Token from `cloudflared tunnel create`. Only needed on VPS.
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token

# =============================================================================
# OpenClaw / Twilio (legacy — retained for backward compatibility)
# =============================================================================
# Copy to .env and fill with your Twilio credentials
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Must be a WhatsApp-enabled Twilio number, prefixed with whatsapp:
TWILIO_WHATSAPP_FROM=whatsapp:+17343367101
